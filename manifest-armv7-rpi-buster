# Manifest to build Sensorgnome for ARMv7 Raspberry Pi running buster
# (his is a shell script)

# dockerhub image for pimod
PIMOD_IMAGE=tvoneicken/pimod:master

#DOCKCROSS_IMAGE=tvoneicken/sensorgnome-dockcross:armv7-rpi-buster-main

# original operating system image, typ frmo raspberrypi.org
OS_IMAGE=https://downloads.raspberrypi.org/raspios_lite_armhf/images/raspios_lite_armhf-2021-05-28/2021-05-07-raspios-buster-armhf-lite.zip

# image type, gets prefixes by sg- or base- and suffixed by .zip, .img, .pifile, etc
TYPE=armv7-rpi-buster

# sensorgnome packages to install, either URL or file .in packages subdir
BP=build_packages/output
S3=https://motus-builds.s3.us-east-2.amazonaws.com/tve
SG_DEBS=(
    $S3/fcd/rpi/fcd_2021.310_armhf.deb
    $S3/find_tags/find_tags_unifile/find-tags-unifile_2021.311_armhf.deb
    $S3/sensorgnome-librtlsdr/sg/sensorgnome-librtlsdr_2021.310_armhf.deb
    $S3/vamp-alsa-host/rpi/vamp-alsa-host_2021.310_armhf.deb
    $S3/vamp-plugins/master/vamp-plugins_2021.310_armhf.deb
    $S3/sensorgnome-support/systemd/sg-boot_2021.311_armhf.deb
    $S3/sensorgnome-support/systemd/sg-gps-clock_2021.311_armhf.deb
    $S3/sensorgnome-support/systemd/sg-ssh-tunnel_2021.311_armhf.deb
    $S3/sensorgnome-support/systemd/sg-udev-usb_2021.311_armhf.deb
    $S3/sensorgnome-support/systemd/sg-wifi-button_2021.311_armhf.deb
    $S3/sensorgnome-control/master/sg-control_2021.311_armhf.deb
)
